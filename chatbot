def chatbot():
    print("Chatbot:Hello!,I am your chatbot.How can I help you?")

    while True:
        user_input=input("You:").lower()

        if "hello" in user_input or "hi" in user_input:
            print("Chatbot:Hello,do you need any help?")
        elif "how are you" in user_input:
            print("Chatbot:I'm just a bot! ,I'm functioning as programmed.")
        elif "time" in user_input:
            from datetime import datetime
            print(f"Chatbot: The current time is {datetime.now().strftime('%H:%M:%S')}")      
        elif "python" in user_input:
            print("Chatbot:Python is a versatile programming language used for web development,AI and more")
        elif "bye" in user_input:
            print("Chatbot:Goodbye!Have a great day")
            break
        else:
            print("Chatbot:Sorry,I don't understand that")

chatbot()
